{
  "name": "@easyauth-js/auth",
  "version": "1.0.0",
  "description": "Reserved package name for future use",
  "private": true,
  "type": "module",
  "main": "index.js",
  "author": "Mark de Graaff",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m-de-graaff/easy-auth.git"
  },
  "packageManager": "pnpm@10.13.1",
  "workspaces": ["packages/**"],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply-unsafe .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm install -r",
    "release": "changeset publish",
    "publish:pkg": "node scripts/publish.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@changesets/cli": "^2.27.8",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3",
    "eslint": "^9.9.0",
    "turbo": "^2.0.11"
  }
}
